# ===========================================
# Database Configuration
# ===========================================
# Choose: postgresql or sqlite
DATABASE_TYPE=postgresql

# PostgreSQL Configuration (if DATABASE_TYPE=postgresql)
POSTGRES_DB=totp_sync
POSTGRES_USER=totp_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://totp_user:your_password@postgres:5432/totp_sync

# SQLite Configuration (if DATABASE_TYPE=sqlite)
SQLITE_PATH=/data/totp-sync.db

# ===========================================
# Backend Configuration
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# Security Keys
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=generate_random_secret_here

# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=generate_random_key_here

# ===========================================
# Features
# ===========================================
REQUIRE_2FA_ON_REGISTER=true

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:3000/api
