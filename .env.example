# Environment variables for TOTP Sync application
# Copy this file to .env and fill in your own values
# Generate secrets using: `openssl rand -base64 32` for JWT_SECRET and `openssl rand -hex 16` for ENCRYPTION_KEY

POSTGRES_DB=totp
POSTGRES_USER=totp
POSTGRES_PASSWORD=your_secure_password
DATABASE_URL=postgresql://totp:your_secure_password@postgres:5432/totp
JWT_SECRET=your_base64_jwt_secret
ENCRYPTION_KEY=your_hex_encryption_key
REQUIRE_2FA_ON_REGISTER=false
