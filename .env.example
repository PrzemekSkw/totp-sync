# ===========================================
# Database Configuration
# ===========================================
# Choose: postgresql or sqlite
DATABASE_TYPE=postgresql

# PostgreSQL Configuration (if DATABASE_TYPE=postgresql)
POSTGRES_DB=totp_sync
POSTGRES_USER=totp_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://totp_user:your_secure_password_here@postgres:5432/totp_sync

# SQLite Configuration (if DATABASE_TYPE=sqlite)
SQLITE_PATH=/data/totp-sync.db

# ===========================================
# Backend Configuration
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# Security Keys
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=your_encryption_key_here

# ===========================================
# WebAuthn Configuration
# ===========================================
# Your app name shown during passkey registration
RP_NAME="TOTP Sync"

# Your domain (without https://) - use "localhost" for local development
RP_ID="localhost"

# Full URL where your app is accessible - must match RP_ID
ORIGIN="http://localhost:5173"

# ===========================================
# Frontend Configuration
# ===========================================
# API endpoint - should match your deployment URL
VITE_API_URL=http://localhost:3000/api

# ===========================================
# CORS Configuration
# ===========================================
# Allowed origin for CORS - should match your frontend URL
CORS_ORIGIN=http://localhost:5173

# ===========================================
# Features
# ===========================================
# Require 2FA setup during registration (true/false)
REQUIRE_2FA_ON_REGISTER=true

# Allow new user registration (true/false)
ALLOW_REGISTRATION=true
